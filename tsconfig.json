{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir":"build",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": false,
        "baseUrl": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "paths": {
            "components/*": [
                "src/components/*"
            ]
        }
    },
    "include": [
        "./src",
        "./webpack.config.ts"
    ]
}
